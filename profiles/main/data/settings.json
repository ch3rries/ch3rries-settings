{
    "editor.fontSize": 18,
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "workbench.colorTheme": "Yi Dark",
    "editor.defaultFormatter": "astro-build.astro-vscode",
    "editor.formatOnSave": true,
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    "workbench.iconTheme": "icons",
    "workbench.tree.indent": 16,
    "telemetry.telemetryLevel": "off",
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",

    // Vim Keybinds
    "vim.leader": "space",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "block-outline",
    "vim.cursorStylePerMode.visual": "block",
    "vim.easymotion": true,
    "vim.foldfix": true,
    "vim.highlightedyank.enable": true,
    "vim.matchpairs": "(:),{:},[:],<:>",
    "vim.normalModeKeyBindingsNonRecursive": [
        // Find redux
        {
            "before": ["f"],
            "after": ["<leader>","<leader>","f"]
        },
        {
            "before": ["F"],
            "after": ["<leader>","<leader>","F"]
        },
        // Workbench (e)
        {
            "before": ["<leader>", "e", "t"],
            "commands": ["workbench.action.terminal.new"]
        },
        {
            "before": ["<leader>", "e", "b"],
            "commands": ["workbench.action.tasks.build"]
        },
        {
            "before": ["<leader>", "e", "c"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "e", "r"],
            "commands": ["workbench.action.reopenClosedEditor"]
        },
        {
            "before": ["<leader>", "e", "p"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>", "e", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "c", "l"],
            "commands": ["editor.action.commentLine"]
        },
        // Bookmark features
        {
            "before": ["<leader>", "m", "b"],
            "commands": ["bookmarks.toggle"]
        },
        {
            "before": ["<leader>", "b", "n"],
            "commands": ["bookmarks.jumpToNext"]
        },
        {
            "before": ["<leader>", "b", "N"],
            "commands": ["bookmarks.jumpToPrevious"]
        },
        // Remap half-page jumps
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z", "z"]
        },
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"]
        },
        // Remap search jumps
        {
            "before": ["n"],
            "after": ["n", "z", "z", "z", "v"]
        },
        {
            "before": ["N"],
            "after": ["N", "z", "z", "z", "v"]
        },
        // Differentiate system and vim buffers
        {
            "before": ["<leader>", "y"],
            "after": ["\"_y"]
        },
        {
            "before": ["<leader>", "Y"],
            "after": ["\"_Y"]
        },
        {
            "before": ["<leader>", "d"],
            "after": ["\"_d"]
        },
    ],
    "vim.visualModeKeyBindings": [
        // Move line in visual mode
        {
            "before": ["J"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        // Differentiate system and vim buffers
        {
            "before": ["<leader>", "y"],
            "after": ["\"_y"]
        },
        {
            "before": ["<leader>", "d"],
            "after": ["\"_d"]
        },
    ],
    "window.zoomLevel": 1,
    "discord.detailsIdling": "Doing Nothing...",
    "discord.detailsDebugging": "Squashing Bugs In {file_name}",
    "discord.detailsEditing": "Editing {file_name} ({file_size})",
    "discord.largeImage": "{LANG}",
}