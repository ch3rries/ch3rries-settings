{
    "editor.fontSize": 18,
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "workbench.colorTheme": "Yi Dark",
    "editor.defaultFormatter": "astro-build.astro-vscode",
    "editor.formatOnSave": true,
    "window.zoomLevel": 1,
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    "workbench.iconTheme": "icons",
    "workbench.tree.indent": 16,
    "telemetry.telemetryLevel": "off",
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",

    // Vim Keybinds
    "vim.useSystemClipboard": true,
    "vim.leader": "space",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "block-outline",
    "vim.cursorStylePerMode.visual": "block",
    "vim.easymotion": true,
    "vim.foldfix": true,
    "vim.highlightedyank.enable": true,
    "vim.matchpairs": "(:),{:},[:],<:>",
    "vim.statusBarColorControl": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // Find redux
        {
            "before": ["f"],
            "after": ["<leader>","<leader>","f"]
        },
        {
            "before": ["F"],
            "after": ["<leader>","<leader>","F"]
        },
        // Workbench (e)
        {
            "before": ["<leader>", "e", "t"],
            "commands": ["workbench.action.terminal.new"]
        },
        {
            "before": ["<leader>", "e", "b"],
            "commands": ["workbench.action.tasks.build"]
        },
        {
            "before": ["<leader>", "e", "c"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "e", "r"],
            "commands": ["workbench.action.reopenClosedEditor"]
        },
        {
            "before": ["<leader>", "e", "p"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>", "e", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "c", "l"],
            "commands": ["editor.action.commentLine"]
        }
    ],
    "workbench.colorCustomizations": {
        "statusBar.background": "#5f00af",
        "statusBar.noFolderBackground": "#5f00af",
        "statusBar.debuggingBackground": "#5f00af"
    },
}